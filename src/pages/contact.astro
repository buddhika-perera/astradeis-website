---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import ContactForm from '../components/sections/ContactForm.astro';
import FAQAccordion from '../components/sections/FAQAccordion.astro';

// FAQ data
const faqs = [
  {
    question: "What information do I need to provide for a quote?",
    answer: "To provide an accurate quote, we'll need to know your industry, project scope, area size, desired data outputs, timeline, and any specific requirements. The more details you can provide, the more tailored our quote will be."
  },
  {
    question: "How quickly can you start a project after initial contact?",
    answer: "For standard projects, we can typically deploy within 1-2 weeks after contract finalization. For urgent needs, we offer expedited services that can deploy in as little as 48 hours, depending on location and equipment availability."
  },
  {
    question: "Do you operate internationally?",
    answer: "Yes, we have operations in over 25 countries across North America, Europe, Asia-Pacific, and Africa. Our global team ensures we can provide consistent service quality worldwide while navigating local regulations."
  },
  {
    question: "What types of support and training do you offer?",
    answer: "We provide comprehensive training packages, 24/7 technical support, remote diagnostics, and field service technicians. Our support plans include regular software updates, preventative maintenance, and access to our knowledge base."
  },
  {
    question: "Can you help with regulatory compliance for drone operations?",
    answer: "Absolutely. Our regulatory compliance team can assist with obtaining necessary permits, ensuring operations meet local requirements, and developing compliance documentation. We stay current with regulations in all countries where we operate."
  }
];

// Get URL parameters to check if we need to pre-select a service
const urlParams = Astro.url.searchParams;
const serviceParam = urlParams.get('service');
---

<BaseLayout 
  title="Contact Us" 
  description="Get in touch with the Astradeis team for consultations, quotes, support, or partnership opportunities."
>
  
  <!-- Hero Section -->
  <HeroSection 
    title="Let's Start a Conversation" 
    subtitle="Our team is ready to help you find the right solution for your needs"
    backgroundImage="/images/contact/contact-hero.jpg">
  </HeroSection>
  
  <!-- Contact Options -->
  <section class="contact-options">
    <div class="container">
      <div class="contact-methods">
        <div class="contact-method">
          <div class="icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <h3>Visit Us</h3>
          <p>10 Lorem Ipsum Street<br>Falloutville, NSW 2000<br>Australia</p>
        </div>
        
        <div class="contact-method">
          <div class="icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Call Us</h3>
          <p>Australia: +61 (0)2 1234 5678<br>International: +1 555 123 4567<br>Support: +61 (0)2 9876 5432</p>
        </div>
        
        <div class="contact-method">
          <div class="icon">
            <i class="fas fa-envelope"></i>
          </div>
          <h3>Email Us</h3>
          <p>General Inquiries:<br>info@astradeis.com<br>Support: support@astradeis.com</p>
        </div>
        
        <div class="contact-method">
          <div class="icon">
            <i class="fas fa-clock"></i>
          </div>
          <h3>Office Hours</h3>
          <p>Monday - Friday: 9:00 AM - 5:30 PM<br>Saturday: By appointment<br>Sunday: Closed</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="map-section">
    <div class="map-container">
      <!-- This would be replaced with an actual map integration in production -->
      <img src="/images/contact/office-map.jpg" alt="Map showing Astradeis office location" />
    </div>
  </section>
  
  <!-- Contact Form Section -->
  <ContactForm 
    title="Get in Touch"
    subtitle="Have questions or need more information? Fill out the form below and our team will get back to you within 24 hours."
  />
  
  <!-- FAQ Section -->
  <FAQAccordion
    title="Frequently Asked Questions"
    faqs={faqs}
  />
  
  <!-- Global Presence -->
  <section class="global-presence">
    <div class="container">
      <h2 class="section-title">Our Global Presence</h2>
      <p class="section-subtitle">With operations in major markets across the globe, we're ready to support your needs wherever you are.</p>
      
      <div class="regions">
        <div class="region">
          <h3>Asia Pacific</h3>
          <ul>
            <li>Sydney, Australia (HQ)</li>
            <li>Melbourne, Australia</li>
            <li>Singapore</li>
            <li>Tokyo, Japan</li>
            <li>New Delhi, India</li>
          </ul>
        </div>
        
        <div class="region">
          <h3>Americas</h3>
          <ul>
            <li>San Francisco, USA</li>
            <li>Denver, USA</li>
            <li>Toronto, Canada</li>
            <li>Mexico City, Mexico</li>
            <li>SÃ£o Paulo, Brazil</li>
          </ul>
        </div>
        
        <div class="region">
          <h3>Europe & Middle East</h3>
          <ul>
            <li>London, UK</li>
            <li>Berlin, Germany</li>
            <li>Paris, France</li>
            <li>Dubai, UAE</li>
            <li>Stockholm, Sweden</li>
          </ul>
        </div>
        
        <div class="region">
          <h3>Africa</h3>
          <ul>
            <li>Johannesburg, South Africa</li>
            <li>Nairobi, Kenya</li>
            <li>Cairo, Egypt</li>
            <li>Lagos, Nigeria</li>
            <li>Accra, Ghana</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Check if there's a service parameter in the URL
    const urlParams = new URLSearchParams(window.location.search);
    const serviceParam = urlParams.get('service');
    
    if (serviceParam) {
      const interestSelect = document.getElementById('interest');
      
      // Map URL parameter to form option value
      const serviceMap = {
        'aircraft': 'aircraft',
        'payload': 'payload',
        'consulting': 'services',
        'demo': 'partnership'
      };
      
      if (interestSelect && serviceMap[serviceParam]) {
        interestSelect.value = serviceMap[serviceParam];
      }
    }
  });
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .contact-options {
    padding: 4rem 0;
    background-color: var(--color-soft-white);
  }
  
  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .contact-method {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .contact-method:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  
  .icon {
    width: 60px;
    height: 60px;
    background-color: var(--color-light-gray);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto 1.5rem;
    color: var(--color-teal);
    font-size: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .contact-method:hover .icon {
    background-color: var(--color-teal);
    color: white;
  }
  
  .contact-method h3 {
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-charcoal-gray);
  }
  
  .contact-method p {
    color: #666;
    line-height: 1.6;
  }
  
  .map-section {
    height: 400px;
    margin-bottom: 4rem;
  }
  
  .map-container {
    width: 100%;
    height: 100%;
  }
  
  .map-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .global-presence {
    padding: 4rem 0;
    background-color: var(--color-soft-white);
    margin-top: 4rem;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--color-charcoal-gray);
  }
  
  .section-subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 2.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .regions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .region {
    background-color: white;
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  
  .region h3 {
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-teal);
    font-weight: 600;
    color: var(--color-charcoal-gray);
  }
  
  .region ul {
    list-style: none;
    padding: 0;
  }
  
  .region ul li {
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .region ul li:last-child {
    border-bottom: none;
  }
  
  @media (max-width: 768px) {
    .contact-methods {
      grid-template-columns: 1fr;
    }
    
    .map-section {
      height: 300px;
    }
  }
</style>
