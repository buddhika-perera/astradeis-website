---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/sections/HeroSection.astro';
import CallToAction from '../../components/sections/CallToAction.astro';

// White papers data organized by category
const whitePapers = {
  "Agriculture": [
    {
      title: "Precision Agriculture: Advanced Multispectral Analysis for Crop Health Monitoring",
      description: "Comprehensive analysis of vegetation indices and their applications in precision farming, including NDVI, NDRE, and custom spectral analysis techniques for optimal crop management.",
      pages: 24,
      publishDate: "March 2024",
      authors: ["Dr. Sarah Johnson", "Michael Chen"],
      downloadUrl: "/downloads/precision-agriculture-multispectral-analysis.pdf",
      featured: true
    },
    {
      title: "ROI Analysis: Drone Technology in Modern Agriculture",
      description: "Economic impact study of drone adoption in agriculture, analyzing cost savings, yield improvements, and operational efficiency gains across different farm sizes and crop types.",
      pages: 18,
      publishDate: "February 2024",
      authors: ["Emma Rodriguez", "James Wilson"],
      downloadUrl: "/downloads/agriculture-roi-analysis.pdf",
      featured: false
    },
    {
      title: "Water Management Optimization Through Thermal Imaging",
      description: "Technical guide to using thermal sensors for irrigation management, including best practices for data collection, processing, and interpretation in various agricultural contexts.",
      pages: 16,
      publishDate: "January 2024",
      authors: ["Dr. Alan Fletcher"],
      downloadUrl: "/downloads/thermal-irrigation-management.pdf",
      featured: false
    }
  ],
  "Construction": [
    {
      title: "Digital Twins in Construction: Implementation and Best Practices",
      description: "Comprehensive guide to implementing digital twin technology in construction projects, covering data integration, workflow optimization, and measurable project outcomes.",
      pages: 32,
      publishDate: "March 2024",
      authors: ["Jennifer Adams", "Thomas Chen"],
      downloadUrl: "/downloads/construction-digital-twins.pdf",
      featured: true
    },
    {
      title: "Volumetric Analysis Accuracy: Comparative Study of Methods",
      description: "Technical comparison of traditional surveying methods versus drone-based volumetric measurement, including accuracy studies and cost-benefit analysis.",
      pages: 20,
      publishDate: "February 2024",
      authors: ["Robert Mitchell", "Maria Santos"],
      downloadUrl: "/downloads/volumetric-analysis-comparison.pdf",
      featured: false
    },
    {
      title: "Safety Monitoring in Construction: Aerial Surveillance Best Practices",
      description: "Guidelines for implementing drone-based safety monitoring on construction sites, including regulatory compliance and risk mitigation strategies.",
      pages: 22,
      publishDate: "December 2023",
      authors: ["David Rodriguez", "Lisa Chen"],
      downloadUrl: "/downloads/construction-safety-monitoring.pdf",
      featured: false
    }
  ],
  "Mining": [
    {
      title: "Advanced LiDAR Processing for Mining Applications",
      description: "Technical methodology for processing high-density LiDAR point clouds in mining environments, including pit progression tracking and stockpile management techniques.",
      pages: 28,
      publishDate: "April 2024",
      authors: ["Marcus Thompson", "Dr. Rachel Green"],
      downloadUrl: "/downloads/mining-lidar-processing.pdf",
      featured: true
    },
    {
      title: "Environmental Compliance Monitoring in Mining Operations",
      description: "Framework for using aerial monitoring to ensure environmental compliance in mining, including vegetation tracking, water quality assessment, and restoration monitoring.",
      pages: 26,
      publishDate: "March 2024",
      authors: ["Dr. Linda Zhang", "James Patterson"],
      downloadUrl: "/downloads/mining-environmental-compliance.pdf",
      featured: false
    }
  ],
  "Environmental": [
    {
      title: "Hyperspectral Remote Sensing for Environmental Monitoring",
      description: "Advanced techniques for environmental assessment using hyperspectral imaging, including pollution detection, species identification, and ecosystem health evaluation.",
      pages: 30,
      publishDate: "April 2024",
      authors: ["Prof. Maria Santos", "Dr. Alan Fletcher"],
      downloadUrl: "/downloads/hyperspectral-environmental-monitoring.pdf",
      featured: true
    },
    {
      title: "Climate Change Impact Assessment Through Long-term Aerial Monitoring",
      description: "Methodology for detecting and quantifying environmental changes over time using consistent aerial monitoring protocols and statistical analysis techniques.",
      pages: 34,
      publishDate: "March 2024",
      authors: ["Dr. Rachel Green", "Michael Chang"],
      downloadUrl: "/downloads/climate-change-aerial-monitoring.pdf",
      featured: false
    }
  ],
  "Technology": [
    {
      title: "Machine Learning Applications in Aerial Data Analysis",
      description: "Implementation guide for AI and machine learning algorithms in processing aerial imagery, including object detection, classification, and predictive analytics.",
      pages: 25,
      publishDate: "April 2024",
      authors: ["David Wilson", "Alexandra Chen"],
      downloadUrl: "/downloads/ml-aerial-data-analysis.pdf",
      featured: true
    },
    {
      title: "Sensor Integration and Calibration: Technical Specifications",
      description: "Detailed technical guide for multi-sensor integration, calibration procedures, and quality control processes for professional aerial data collection systems.",
      pages: 22,
      publishDate: "March 2024",
      authors: ["Maria Rodriguez", "James Patel"],
      downloadUrl: "/downloads/sensor-integration-calibration.pdf",
      featured: false
    }
  ]
};

// Featured papers for hero section
const featuredPapers = Object.values(whitePapers).flat().filter(paper => paper.featured);
---

<BaseLayout 
  title="White Papers & Research" 
  description="Access our collection of technical white papers, research studies, and industry analysis covering drone technology applications."
>
  
  <!-- Hero Section -->
  <HeroSection 
    title="Technical White Papers & Research" 
    subtitle="In-depth analysis and research on aerial intelligence applications across industries"
    backgroundImage="/images/resources/research-hero.jpg">
  </HeroSection>
  
  <!-- Featured Papers -->
  <section class="featured-papers">
    <div class="container">
      <h2 class="section-title">Featured Research</h2>
      <p class="section-subtitle">Our latest and most impactful research publications</p>
      
      <div class="featured-grid">
        {featuredPapers.map(paper => (
          <div class="featured-paper">
            <div class="paper-badge">Featured</div>
            <div class="paper-content">
              <h3>{paper.title}</h3>
              <p class="paper-description">{paper.description}</p>
              <div class="paper-meta">
                <span class="pages">{paper.pages} pages</span>
                <span class="date">{paper.publishDate}</span>
              </div>
              <div class="paper-authors">
                <strong>Authors:</strong> {paper.authors.join(", ")}
              </div>
              <a href={paper.downloadUrl} class="download-btn" download>
                <i class="fa-solid fa-download"></i>
                Download PDF
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- All Papers by Category -->
  <section class="papers-by-category">
    <div class="container">
      <h2 class="section-title">Research by Industry</h2>
      <p class="section-subtitle">Explore our comprehensive collection of technical papers organized by application area</p>
      
      <!-- Category Navigation -->
      <div class="category-nav">
        {Object.keys(whitePapers).map((category, index) => (
          <button class={`category-btn ${index === 0 ? 'active' : ''}`} data-category={category}>
            {category}
          </button>
        ))}
      </div>
      
      <!-- Papers Content -->
      <div class="papers-content">
        {Object.entries(whitePapers).map(([category, papers], categoryIndex) => (
          <div class={`category-section ${categoryIndex === 0 ? 'active' : ''}`} data-category={category}>
            <div class="papers-grid">
              {papers.map(paper => (
                <div class="paper-card">
                  <div class="paper-header">
                    <h3>{paper.title}</h3>
                    <div class="paper-meta">
                      <span class="pages">
                        <i class="fa-solid fa-file-pdf"></i>
                        {paper.pages} pages
                      </span>
                      <span class="date">
                        <i class="fa-solid fa-calendar"></i>
                        {paper.publishDate}
                      </span>
                    </div>
                  </div>
                  
                  <div class="paper-body">
                    <p>{paper.description}</p>
                    <div class="paper-authors">
                      <strong>Authors:</strong> {paper.authors.join(", ")}
                    </div>
                  </div>
                  
                  <div class="paper-footer">
                    <a href={paper.downloadUrl} class="download-link" download>
                      <i class="fa-solid fa-download"></i>
                      Download PDF
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Research Impact -->
  <section class="research-impact">
    <div class="container">
      <div class="impact-content">
        <h2>Research Impact & Citations</h2>
        <p>Our research contributes to advancing the field of aerial intelligence and has been cited by leading institutions, government agencies, and industry professionals worldwide.</p>
        
        <div class="impact-stats">
          <div class="impact-stat">
            <span class="stat-number">2,500+</span>
            <span class="stat-label">Total Citations</span>
          </div>
          <div class="impact-stat">
            <span class="stat-number">45</span>
            <span class="stat-label">Research Publications</span>
          </div>
          <div class="impact-stat">
            <span class="stat-number">12</span>
            <span class="stat-label">Peer-Reviewed Journals</span>
          </div>
          <div class="impact-stat">
            <span class="stat-number">8</span>
            <span class="stat-label">Industry Awards</span>
          </div>
        </div>
      </div>
      
      <div class="impact-image">
        <img src="/images/resources/research-impact.jpg" alt="Research impact visualization showing global citations and collaborations" />
      </div>
    </div>
  </section>
  
  <!-- Research Partnerships -->
  <section class="research-partnerships">
    <div class="container">
      <h2 class="section-title">Research Partnerships</h2>
      <p class="section-subtitle">Collaborating with leading institutions to advance aerial intelligence research</p>
      
      <div class="partnerships-grid">
        <div class="partner-category">
          <h3>Universities & Research Institutions</h3>
          <ul class="partner-list">
            <li>Stanford University - Computer Vision Lab</li>
            <li>MIT - Aerospace Engineering Department</li>
            <li>University of Sydney - Precision Agriculture Centre</li>
            <li>Technical University of Munich - Remote Sensing Lab</li>
            <li>University of California Berkeley - Environmental Sciences</li>
          </ul>
        </div>
        
        <div class="partner-category">
          <h3>Government & Standards Bodies</h3>
          <ul class="partner-list">
            <li>Australian Research Council (ARC)</li>
            <li>National Science Foundation (NSF)</li>
            <li>European Space Agency (ESA)</li>
            <li>International Society for Photogrammetry</li>
            <li>IEEE Geoscience and Remote Sensing Society</li>
          </ul>
        </div>
        
        <div class="partner-category">
          <h3>Industry Collaborations</h3>
          <ul class="partner-list">
            <li>Agricultural Research Consortium</li>
            <li>Mining Technology Institute</li>
            <li>Construction Innovation Hub</li>
            <li>Environmental Monitoring Alliance</li>
            <li>Geospatial Industry Association</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Collaborate with Our Research Team"
    text="Interested in partnering with us on research projects or have questions about our technical publications?"
    buttonText="Contact Research Team"
    buttonUrl="/contact?department=research"
    backgroundImage="/images/cta/research-collaboration.jpg"
  />
  
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryBtns = document.querySelectorAll('.category-btn');
    const categorySections = document.querySelectorAll('.category-section');
    
    categoryBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const targetCategory = btn.dataset.category;
        
        // Update active button
        categoryBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Update active section
        categorySections.forEach(section => {
          section.classList.remove('active');
          if (section.dataset.category === targetCategory) {
            section.classList.add('active');
          }
        });
      });
    });
  });
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--color-charcoal-gray);
  }
  
  .section-subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 2.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Featured Papers */
  .featured-papers {
    padding: 4rem 0;
    background-color: var(--color-soft-white);
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
  
  .featured-paper {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .featured-paper:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }
  
  .paper-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: var(--color-teal);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 1;
  }
  
  .paper-content {
    padding: 2rem;
  }
  
  .featured-paper h3 {
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-charcoal-gray);
    line-height: 1.3;
  }
  
  .paper-description {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .paper-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: #888;
  }
  
  .paper-authors {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 1.5rem;
  }
  
  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--color-teal);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .download-btn:hover {
    background-color: var(--color-teal-dark);
    transform: translateY(-2px);
  }
  
  /* Papers by Category */
  .papers-by-category {
    padding: 4rem 0;
  }
  
  .category-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
  }
  
  .category-btn {
    background-color: var(--color-light-gray);
    color: var(--color-charcoal-gray);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .category-btn:hover,
  .category-btn.active {
    background-color: var(--color-teal);
    color: white;
  }
  
  .category-section {
    display: none;
  }
  
  .category-section.active {
    display: block;
  }
  
  .papers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .paper-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .paper-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  
  .paper-header {
    padding: 1.5rem 1.5rem 1rem;
  }
  
  .paper-card h3 {
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-charcoal-gray);
    font-size: 1.1rem;
    line-height: 1.3;
  }
  
  .paper-card .paper-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.85rem;
    color: #888;
  }
  
  .paper-card .paper-meta span {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
  
  .paper-body {
    padding: 0 1.5rem 1rem;
  }
  
  .paper-body p {
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .paper-card .paper-authors {
    font-size: 0.85rem;
    color: #666;
  }
  
  .paper-footer {
    padding: 1rem 1.5rem 1.5rem;
    border-top: 1px solid #eee;
  }
  
  .download-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-teal);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .download-link:hover {
    color: var(--color-teal-dark);
  }
  
  /* Research Impact */
  .research-impact {
    padding: 4rem 0;
    background-color: var(--color-soft-white);
  }
  
  .research-impact .container {
    display: flex;
    gap: 3rem;
    align-items: center;
  }
  
  .impact-content {
    flex: 1;
  }
  
  .impact-image {
    flex: 1;
  }
  
  .impact-content h2 {
    margin-bottom: 1.5rem;
    font-weight: 700;
    color: var(--color-charcoal-gray);
  }
  
  .impact-content p {
    margin-bottom: 2rem;
    color: #444;
    line-height: 1.7;
  }
  
  .impact-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .impact-stat {
    text-align: center;
    padding: 1rem;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  
  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-teal);
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    font-size: 0.9rem;
    color: #666;
  }
  
  .impact-image img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  /* Research Partnerships */
  .research-partnerships {
    padding: 4rem 0;
  }
  
  .partnerships-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .partner-category {
    background-color: var(--color-soft-white);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  
  .partner-category h3 {
    margin-bottom: 1.5rem;
    font-weight: 600;
    color: var(--color-charcoal-gray);
    text-align: center;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-teal);
  }
  
  .partner-list {
    list-style: none;
    padding: 0;
  }
  
  .partner-list li {
    padding: 0.75rem 0;
    color: #666;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    font-size: 0.95rem;
  }
  
  .partner-list li:last-child {
    border-bottom: none;
  }
  
  /* Responsive Styles */
  @media (max-width: 992px) {
    .research-impact .container {
      flex-direction: column;
    }
    
    .impact-content, .impact-image {
      width: 100%;
    }
    
    .impact-image {
      margin-top: 2rem;
    }
    
    .featured-grid,
    .papers-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .category-nav {
      flex-direction: column;
      align-items: center;
    }
    
    .category-btn {
      width: 200px;
      text-align: center;
    }
    
    .impact-stats {
      grid-template-columns: 1fr;
    }
  }
</style>