    display: flex;
    gap: 3rem;
    align-items: center;
  }
  
  .story-content {
    flex: 2;
  }
  
  .story-image {
    flex: 1;
    max-width: 400px;
  }
  
  .story-content h2 {
    margin-bottom: 1.5rem;
    font-weight: 700;
    color: var(--color-charcoal-gray);
  }
  
  .story-content p {
    margin-bottom: 1rem;
    color: #444;
    line-height: 1.7;
  }
  
  .story-image img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  /* Core Values Section */
