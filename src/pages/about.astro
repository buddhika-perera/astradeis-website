    text-align: center;
    color: #666;
    margin-bottom: 2.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Mission and Vision Section */
  .mission-vision {
    padding: 4rem 0;
    background-color: var(--color-soft-white);
  }
  
