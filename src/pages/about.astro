    flex-wrap: wrap;
  }
  
  .mission, .vision {
    flex: 1;
    min-width: 300px;
    max-width: 500px;
    padding: 2rem;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  .mission .icon, .vision .icon {
    width: 60px;
    height: 60px;
    background-color: var(--color-teal);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 1.5rem;
  }
  
  .mission h2, .vision h2 {
    margin-bottom: 1rem;
    color: var(--color-charcoal-gray);
  }
  
  .mission p, .vision p {
    color: #444;
    font-size: 1.1rem;
    line-height: 1.6;
  }
  
  /* Company Story Section */
  .company-story {
    padding: 4rem 0;
  }
  
