// Features data
const features = [
  {
    title: "Modular Design",
    description: "Easily swap payloads in under 60 seconds without tools",
    icon: "fa-solid fa-cubes",
    url: "/products/aircraft/modular-design"
  },
  {
    title: "Rapid Deployment",
    description: "Ready to fly in under 5 minutes with our QuickLaunch system",
