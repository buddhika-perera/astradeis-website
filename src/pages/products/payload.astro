---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/sections/HeroSection.astro';
import FeatureCard from '../../components/common/FeatureCard.astro';
import Specifications from '../../components/sections/Specifications.astro';
import TestimonialSlider from '../../components/sections/TestimonialSlider.astro';
import CallToAction from '../../components/sections/CallToAction.astro';
import FAQAccordion from '../../components/sections/FAQAccordion.astro';

// Payload systems features
const payloadFeatures = [
  {
    title: "RGB Imaging System",
    description: "High-resolution visual spectrum cameras for detailed mapping and inspection applications",
    icon: "fa-solid fa-camera",
    url: "/products/payload/rgb-imaging"
  },
  {
    title: "Multispectral Sensors",
    description: "Multi-band sensors for agriculture, environmental monitoring, and vegetation analysis",
    icon: "fa-solid fa-eye",
    url: "/products/payload/multispectral"
  },
  {
    title: "LiDAR Systems",
    description: "Precision 3D mapping with centimeter-level accuracy for topographic surveys",
    icon: "fa-solid fa-mountain",
    url: "/products/payload/lidar"
  },
  {
    title: "Thermal Imaging",
    description: "Infrared sensors for heat detection, building inspection, and energy audits",
    icon: "fa-solid fa-temperature-high",
    url: "/products/payload/thermal"
  },
  {
    title: "Hyperspectral Sensors",
    description: "Advanced spectral analysis for mineral detection, crop health, and material identification",
    icon: "fa-solid fa-spectrum",
    url: "/products/payload/hyperspectral"
  },
  {
    title: "Gas Detection Systems",
    description: "Environmental monitoring sensors for methane, CO2, and other gas emissions",
    icon: "fa-solid fa-wind",
    url: "/products/payload/gas-detection"
  }
];

// Payload specifications
const payloadSpecs = [
  {
    title: "RGB Imaging Systems",
    features: [
      "Resolution: Up to 61MP full-frame sensor",
      "Lens Options: 24mm, 35mm, 50mm fixed focal lengths",
      "Video Recording: 4K @ 60fps, 8K @ 30fps",
      "Image Stabilization: 3-axis mechanical gimbal",
      "File Formats: RAW, JPEG, TIFF",
      "Storage: Dual CFexpress cards up to 512GB each"
    ]
  },
  {
    title: "Multispectral Sensors",
    features: [
      "Spectral Bands: 5-band system (Blue, Green, Red, Red Edge, NIR)",
      "Resolution: 3.2MP per band",
      "Spectral Range: 400-1000nm",
      "Radiometric Calibration: Integrated calibration panel",
      "Data Output: GeoTIFF with GPS coordinates",
      "Applications: NDVI, NDRE, custom vegetation indices"
    ]
  },
  {
    title: "LiDAR Systems",
    features: [
      "Range: Up to 250m (at 80% reflectivity)",
      "Accuracy: ±2cm vertical, ±3cm horizontal",
      "Point Rate: Up to 320,000 points/second",
      "Field of View: 360° horizontal, ±15° vertical",
      "Eye Safety: Class 1 laser (905nm wavelength)",
      "Data Output: LAS/LAZ point clouds with RGB colorization"
    ]
