---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/images/logo/astradeis-logo-white.svg" alt="Astradeis Logo" />
        <p>Elevating Innovation, Expanding Horizons</p>
      </div>
      
      <div class="footer-links">
        <div class="link-column">
          <h3>Products</h3>
          <ul>
            <li><a href="/products/aircraft">Aircraft</a></li>
            <li><a href="/products/payload">Payload</a></li>
            <li><a href="/products/services">Services</a></li>
          </ul>
        </div>
        
        <div class="link-column">
          <h3>Industries</h3>
          <ul>
            <li><a href="/industries/agriculture">Agriculture</a></li>
            <li><a href="/industries/construction">Construction</a></li>
            <li><a href="/industries/mining">Mining</a></li>
            <li><a href="/industries/land-management">Land Management</a></li>
            <li><a href="/industries/environmental">Environmental</a></li>
          </ul>
        </div>
        
        <div class="link-column">
          <h3>Resources</h3>
          <ul>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/resources/whitepapers">White Papers</a></li>
            <li><a href="/resources/guides">Quick Start Guides</a></li>
            <li><a href="/resources/knowledge-base">Knowledge Base</a></li>
          </ul>
        </div>
        
        <div class="link-column">
          <h3>Company</h3>
          <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/legal/privacy">Privacy Policy</a></li>
            <li><a href="/legal/terms">Terms of Service</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="contact-info">
        <p>10 Lorem Ipsum Street, Falloutville, NSW 2000</p>
        <p>ABN: 10 123 345 456</p>
        <p>+61 (0)2 1234 5678</p>
      </div>
      
      <div class="social-icons">
        <a href="#" aria-label="LinkedIn"><i class="fa-brands fa-linkedin"></i></a>
        <a href="#" aria-label="Twitter"><i class="fa-brands fa-twitter"></i></a>
        <a href="#" aria-label="Facebook"><i class="fa-brands fa-facebook"></i></a>
        <a href="#" aria-label="Instagram"><i class="fa-brands fa-instagram"></i></a>
      </div>
      
      <div class="copyright">
        <p>&copy; {currentYear} Astradeis Pty Ltd</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-charcoal-gray);
    color: white;
    padding: 4rem 0 2rem;
  }
  
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .footer-logo {
    flex: 1;
    min-width: 300px;
  }
  
  .footer-logo img {
    max-width: 200px;
    margin-bottom: 1rem;
  }
  
  .footer-links {
    flex: 2;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }
  
  .link-column {
    flex: 1;
    min-width: 150px;
  }
  
  .link-column h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .link-column ul {
    list-style: none;
    padding: 0;
  }
  
  .link-column ul li {
    margin-bottom: 0.5rem;
  }
  
  .link-column ul li a {
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.3s ease;
  }
  
  .link-column ul li a:hover {
    color: white;
  }
  
  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .contact-info, .social-icons, .copyright {
    margin-bottom: 1rem;
  }
  
  .social-icons a {
    display: inline-block;
    margin-right: 1rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }
  
  .social-icons a:hover {
    color: white;
  }
  
  @media (max-width: 992px) {
    .footer-content {
      flex-direction: column;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
