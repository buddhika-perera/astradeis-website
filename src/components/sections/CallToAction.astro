---
export interface Props {
  title: string;
  text?: string;
  buttonText: string;
  buttonUrl: string;
  backgroundImage?: string;
}

const { 
  title, 
  text, 
  buttonText, 
  buttonUrl,
  backgroundImage = "/images/cta-background.jpg"
} = Astro.props;
---

<section class="cta" style={`background-image: url(${backgroundImage});`}>
  <div class="cta-content">
    <h2>{title}</h2>
    {text && <p>{text}</p>}
    <a href={buttonUrl} class="cta-button">{buttonText}</a>
  </div>
</section>

<style>
  .cta {
    background-color: var(--color-light-gray);
    background-size: cover;
    background-position: center;
    position: relative;
    padding: 4rem 2rem;
    margin: 4rem 0;
    text-align: center;
  }
  
  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(44, 44, 44, 0.7);
    z-index: 1;
  }
  
  .cta-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    color: white;
  }
  
  h2 {
    margin-bottom: 1.5rem;
    font-size: 2rem;
    font-weight: 700;
  }
  
  p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    opacity: 0.9;
  }
  
  .cta-button {
    display: inline-block;
    background-color: var(--color-teal);
    color: white;
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: var(--font-size-cta);
    padding: 0.75rem 2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .cta-button:hover {
    background-color: var(--color-teal-dark);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }
</style>
